{
  "name": "zoracle-telegram-bot",
  "version": "1.0.0",
  "description": "Telegram bot for Base blockchain token monitoring with Zora content focus",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && ./scripts/start-with-env.sh",
    "dev": "ts-node -r dotenv/config src/run.ts",
    "debug": "NODE_DEBUG=telegram-bot-api ts-node -r dotenv/config src/run.ts",
    "quick-test": "ts-node src/quick-test.ts",
    "validate-address": "ts-node src/validate-address.ts",
    "minimal": "ts-node src/minimal-app.ts",
    "test-validation": "node src/test-validation.cjs",
    "test-mempool": "node src/test-mempool.cjs",
    "test-mock": "node src/test-mempool-mock.cjs",
    "kill-bot": "pkill -f 'node.*run.js' || pkill -f 'ts-node.*run.ts' || echo 'No bot instances running' && curl -s \"https://api.telegram.org/bot$(grep TELEGRAM_BOT_TOKEN .env | cut -d= -f2)/deleteWebhook?drop_pending_updates=true\" > /dev/null",
    "generate-key": "ts-node -e \"console.log(require('crypto').randomBytes(32).toString('hex'))\"",
    "db:init": "ts-node -r dotenv/config src/database/init.ts",
    "db:seed": "ts-node -r dotenv/config scripts/seed-db.ts",
    "db:test": "ts-node -r dotenv/config scripts/test-mongodb.ts",
    "lint": "eslint src/ --ext .ts",
    "lint:fix": "eslint src/ --ext .ts --fix",
    "test": "jest"
  },
  "dependencies": {
    "@coinbase/cdp-sdk": "^1.30.0",
    "@velora-dex/sdk": "^8.1.0",
    "axios": "^1.6.2",
    "crypto": "^1.0.1",
    "dotenv": "^16.6.1",
    "dotenv-expand": "^10.0.0",
    "ethers": "^5.7.2",
    "fs-extra": "^11.2.0",
    "install": "^0.13.0",
    "moment": "^2.30.1",
    "mongoose": "^8.0.3",
    "node-telegram-bot-api": "^0.63.0",
    "qrcode": "^1.5.3",
    "speakeasy": "^2.0.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.1.0",
    "@types/node-telegram-bot-api": "^0.64.9",
    "@types/qrcode": "^1.5.5",
    "@types/sequelize": "^4.28.20",
    "@types/speakeasy": "^2.0.10",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^8.55.0",
    "jest": "^30.0.5",
    "nodemon": "^3.0.1",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "private": true,
  "keywords": [
    "telegram",
    "bot",
    "base",
    "cryptocurrency",
    "zora",
    "nft",
    "monitoring"
  ]
}
